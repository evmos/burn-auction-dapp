generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model AuctionEndEvent {
  id               Int      @id @default(autoincrement())
  winner           String
  round            BigInt
  coins            Coin[]
  burned           BigInt
  blockNumber      BigInt
  transactionHash  String
  transactionIndex Int
  blockHash        String
  logIndex         Int
  removed          Boolean
}

model BidEvent {
  id               Int      @id @default(autoincrement())
  sender           String
  round            String
  amount           String
  blockNumber      String
  transactionHash  String
  transactionIndex Int
  blockHash        String
  logIndex         Int
  removed          Boolean
}

model Coin {
  id               Int              @id @default(autoincrement())
  denom            String
  amount           BigInt
  auctionEndEvent  AuctionEndEvent  @relation(fields: [auctionEndEventId], references: [id])
  auctionEndEventId Int
}
